<h1>Клиенты</h1>

<%= link_to 'Добавить', new_client_path, class: "btn btn-success entypo-plus-squared" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client, client %></td>
        <td><%= link_to 'Изменить', edit_client_path(client), class: "btn btn-warning entypo-pencil" %> <%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger entypo-cancel-squared" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

