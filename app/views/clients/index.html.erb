<h1>Listing clients</h1>

<%= link_to 'Добавить', new_client_path %>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client, client %></td>
        <td><%= link_to 'Изменить', edit_client_path(client) %></td>
        <td><%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

