<% # encoding: windows-1251 %>
<%= semantic_form_for @client do |f| %>
  <%= f.inputs do %>
    <%# f.label :natural_person_sugg, 'Клиент' %>
    <%# autocomplete_field_tag :natural_person_sugg,'', autocomplete_natural_person_name_clients_path,:id_element => '#client_natural_person', multiple: true, 'date-delimiter' => '\s' %>
    <%= f.hidden_field :natural_person_id %>
    <%= f.input :email, :label => "Номер телефона" %>
    <%= f.input :mail, label: "Email" %>
    <%= f.input :fio, :label => "Ф.И.О." %>
    <%= f.input :card_number, :label => "Номер карты" %>
    <%= f.semantic_fields_for :account do |a| %>
      <% a.input :total %>
    <% end %>
    <%= f.input :bonus_program %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => "Применить" %>
  <% end %>
<% end %>
