<%= semantic_form_for @client do |f| %>
  <%= f.inputs do %>
    <%= f.input :email, :label => "Номер телефона" %>
    <%= f.input :fio, :label => "Ф.И.О." %>
    <%= f.input :card_number, :label => "Номер карты" %>
    <%= f.semantic_fields_for :account do |a| %>
      <% a.input :total %>
    <% end %>
    <%= f.input :bonus_program %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => "Применить" %>
  <% end %>
<% end %>
