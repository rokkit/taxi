<%= semantic_form_for @client do |f| %>
  <%= f.inputs do %>
    <%= f.input :email, as: :phone %>
    <%= f.input :fio %>
    <%= f.input :card_number %>
    <%= f.semantic_fields_for :account do |a| %>
      <% a.input :total %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
