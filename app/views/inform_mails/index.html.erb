<h1>Отправленные сообщения</h1>

<%= link_to "Изменить текст и имя отправителя", change_text_inform_mails_path, class: "btn btn-primary" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Клиент</th>
      <th>Сообщение</th>
      <th>Дата отправки</th>
    </tr>
  </thead>

  <tbody>
    <% @inform_mails.each do |inform_mail| %>
      <tr>
        <td><%= inform_mail.client %></td>
        <td><%= inform_mail.body.encode %></td>
        <td><%= inform_mail.created_at.strftime("%d.%m.%Y %R") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @inform_mails %>
<br>

<%= link_to 'Отправить сообщение', new_inform_mail_path %>
