<h1>Список операторов</h1>

<%= link_to 'Пригласить оператора', new_operator_path, class: "btn btn-success entypo-plus-squared" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= link_to operator, operator %></td>
        <td><%= link_to 'Удалить', operator, method: :delete, data: { confirm: 'Вы уверены?' }, class: "error" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
