<%= semantic_form_for @trip do |f| %>
  <%= f.inputs do %>
    <%= f.input :client, :as => :autocomplete, :url => autocomplete_client_email_trips_path, input_html: {name:"",:id_element => '#user_id_auto'},:update_elements => {} %>
    <%# f.autocomplete_field :user, autocomplete_client_email_trips_path, :id_element => '#user_id_auto',:update_elements => {} %>
    <div id="user-form" style="">
      <%= f.semantic_fields_for :client do |u|%>
        <%= u.input :email %>
        <%= u.input :card_number  %>
      <% end %>
    </div>
    <%= f.hidden_field :client,name:"trip[client_id]", id: "user_id_auto" %>
    <%= f.text_field :trip_date, id: "trip_date" %>
    <%= f.text_field :trip_date, id: "trip_time" %>
    <%= f.input :duration %>
    <%= f.input :price %>
    <%= f.input :bonus_point %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
